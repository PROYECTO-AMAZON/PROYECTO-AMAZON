@{
    ViewData["Title"] = "Datos Personales";
}

@model ALUMNO

<div class="text-center">
    <h2 class="display-4" style="font-weight: 500; padding-top: 10px; padding-bottom: 20px;">@ViewData["Title"]</h2>
</div>

<div class="row">
    
    <div class="col-1"></div>
    
    <div class="col-10">

        <div style="background-color: #FE914B; border-radius: 15px; padding-bottom: 10px; margin-bottom: 25px; opacity: 86%;" class="container">
            <form action="" method="post">
                <div class="row">
                    <div class="col-6 container" style="padding-top: 15px;">
                        <div class="form-group" style="padding-top: 20px; padding-left: 10px;">
                            <label asp-for="nombre"></label>
                            <input type="text" asp-for="nombre" class="form-control">
                        </div>
                        <div class="form-group" style="padding-top: 15px; padding-left: 10px;">
                            <label asp-for="apePat"></label>
                            <input type="text" asp-for="apePat" class="form-control">
                        </div>
                        <div class="form-group" style="padding-top: 15px; padding-left: 10px;">
                            <label asp-for="apeMat"></label>
                            <input type="text" asp-for="apeMat" class="form-control">
                        </div>
                        <div class="form-group" style="padding-top: 15px; padding-left: 10px;">
                            <label asp-for="fechaNac"></label>
                            <input type="date" asp-for="fechaNac" class="form-control">
                        </div>
                        <div class="form-group" style="padding-top: 15px; padding-bottom: 20px; padding-left: 10px;">
                            <label asp-for="genero"></label>
                            <div>
                                <label><input asp-for="genero" type="radio" name="genero" value="M"> M</label>
                                <label style="padding-left: 5px;"><input asp-for="genero" type="radio" name="genero" value="F"> F</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 container" style="padding-top: 15px;">
                        <div class="form-group" style="padding-top: 20px; padding-right: 15px;">
                            <label asp-for="dni"></label>
                            <input type="text" asp-for="dni" class="form-control">
                        </div>
                        <div class="form-group" style="padding-top: 15px; padding-right: 15px;">
                            <label asp-for="celular"></label>
                            <input type="text" asp-for="celular" class="form-control">
                        </div>
                        <div class="form-group" style="padding-top: 15px; padding-right: 15px;">
                            <label asp-for="email"></label>
                            <input type="text" asp-for="email" class="form-control">
                        </div>
                        <div class="form-group" style="padding-top: 15px; padding-right: 15px;">
                            <label asp-for="contrasena"></label>
                            <input type="password" asp-for="contrasena" class="form-control">
                        </div>
                        <div style="text-align: center; padding-top: 25px;">
                            <button type="submit"class="btn btn-dark" style="color: #FE914B; border-radius: 12px;" data-bs-toggle="modal" data-bs-target="#exampleModal">Registrar</button>
                        </div>
                        
                        <!-- Modal -->
 
                    </div>
                </div>
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="border-radius: 20px;">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                        <div class="modal-body">        
                            <div class="mb-3 text-center" >
                                <img src="https://bit.ly/3xAw6bF" height="300px;" width="300px;">
                            </div> 
                            <div class="mb-3 text-center" >
                                <label > Registro exitoso!</label>
                            </div> 
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 20px;">CERRAR</button>
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
            </form>
        </div>
    
    </div>

    <div class="col-1"></div>

</div>


