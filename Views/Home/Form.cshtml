@{
    Layout="_Layout_nuevo";
}
@{
    ViewData["Title"] = "Datos Personales";
}

<div class="text-center">
    <h1 class="display-4" style="font-weight: 500;">@ViewData["Title"]</h1>
</div>

<div class="row">
    
    <div class="col-1"></div>
    
    <div class="col-10">

        <div style="background-color: #FE914B; border-radius: 15px; padding-bottom: 10px; opacity: 86%;" class="container">
            <form action="" method="post">
                <div class="row">
                    <div class="col-6 container" style="padding-top: 15px;">
                        <div class="form-group">
                            <label for="">Nombres:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Apellido Paterno:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Apellido Materno:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Fecha De Nacimiento:</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Celular:</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Género:</label>
                            <label for=""><input type="radio" name="genero" value="M"> M</label>
                            <label for=""><input type="radio" name="genero" value="F"> F</label>
                        </div>
                    </div>
                    <div class="col-6 container" style="padding-top: 15px;">
                        <div class="form-group">
                            <label for="">Departamento:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Provincia:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Distrito:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Email:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Contraseña:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div style="text-align: center;">
                            <a asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-dark" style="color: #FE914B; border-radius: 12px;">REGISTRARSE</button></a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    
    </div>

    <div class="col-1"></div>

</div>